<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <!-- LinearLayout的Height必须为wrap_content,如果为match_parent,那么在第二次加载Badge的时候,Tab布局会出现问题 -->

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="dsadasdas"
        android:textSize="14sp"
        android:textColor="@color/tab_text_color_selector" />

    <TextView
        android:id="@+id/tab_unread_notify"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="-3dp"
        android:layout_toRightOf="@id/textview"
        android:background="@drawable/tab_pri_notify_bk"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="8dp"
        android:visibility="visible" />

    <View
        android:layout_width="0dp"
        android:layout_height="44dp" />
</RelativeLayout>