<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="欢迎使用蝌蚪互联手机端"
        android:textColor="@color/deepColor"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:text="为了给您提供更优质的服务，蝌蚪互联手机
端将向您申请以下权限和信息："
        android:textColor="@color/deepColor"
        android:textSize="@dimen/dimen_14"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginRight="30dp"
        android:layout_weight="1"
        android:background="@drawable/perbk">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/deal_ll"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginRight="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dealIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:button="@null"
            android:clickable="false"
            android:src="@drawable/xieyiyixuanze_btn" />

        <TextView
            style="@style/deepFont_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="已阅读并同意"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dealTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户协议》"
            android:textColor="@color/primaryColor"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            style="@style/deepFont_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="及"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tangzhudealTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《隐私协议》"
            android:textColor="@color/primaryColor"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>


    <TextView
        android:id="@+id/registerTv"
        style="@style/textViewStyle_Button_Margin"
        android:layout_marginLeft="@dimen/dimen_30"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:text="同意" />

    <TextView
        android:id="@+id/cancletv"
        style="@style/deepFont_14"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="取消" />


</LinearLayout>