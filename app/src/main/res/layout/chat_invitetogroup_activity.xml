<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/top_view"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:background="@color/titleBkColor">

        <TextView
            android:id="@+id/cancleTv"
            android:text="取消"
            android:layout_width="wrap_content"
            android:layout_height="45.0dip"
            android:layout_gravity="center|left"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:padding="7.0dip"
            android:textColor="@color/tintColor"
            android:textSize="16.0sp"
            />

        <TextView
            android:layout_gravity="right|center_vertical"
            android:id="@+id/agreeTv"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginRight="@dimen/screen_right"
            android:background="@drawable/primary_5_bk"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="完成"
            android:textColor="@color/whiteColor"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="65.0dip"
            android:text="创建群聊"
            android:layout_marginRight="65.0dip"
            android:singleLine="true"
            android:textColor="@color/deepColor"
            android:textSize="17.0sp" />


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:background="@color/bgColor"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/whiteColor"
             />
        </LinearLayout>

        <com.stay.toolslibrary.widget.AlphabetInviteScrollBar
            android:id="@+id/bar"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/whiteColor" />

        <TextView
            android:id="@+id/select"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/user_select"
            android:gravity="center"
            android:textColor="@color/whiteColor"
            android:textSize="25sp"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>