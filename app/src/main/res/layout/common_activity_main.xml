<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgColor"
        android:orientation="vertical"
        android:paddingBottom="50dp">

        <fragment
            android:id="@+id/fragment_1"
            class="com.qttx.kedouhulian.ui.reward.RewardHomeTabFragmet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <fragment
            android:id="@+id/fragment_2"
            class="com.qttx.kedouhulian.ui.chat.ChatHomeTabFragmet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <fragment
            android:id="@+id/fragment_3"
            class="com.qttx.kedouhulian.ui.pond.PondHomeTabFragmet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <fragment
            android:id="@+id/fragment_4"
            class="com.qttx.kedouhulian.ui.mine.MineHomeTabFragmet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/spiteColor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <com.stay.toolslibrary.widget.NativeTabButton
            android:id="@+id/tab_button_1"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <com.stay.toolslibrary.widget.NativeTabButton
            android:id="@+id/tab_button_2"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <com.stay.toolslibrary.widget.NativeTabButton

            android:id="@+id/tab_button_3"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <com.stay.toolslibrary.widget.NativeTabButton
            android:id="@+id/tab_button_4"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1" />

    </LinearLayout>
</RelativeLayout>
