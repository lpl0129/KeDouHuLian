<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whiteColor"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/userLl"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/screen_left"
        android:paddingRight="@dimen/screen_right">

        <ImageView
            android:id="@+id/userAvatarIv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user_avatar_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/userName"
                    style="@style/deepFont_15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="大萨达萨达啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊" />

            </LinearLayout>

            <TextView
                android:id="@+id/timeTv"
                style="@style/tintFont_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:text="2019" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/userMineLl"
        android:paddingLeft="@dimen/screen_left"
        android:paddingRight="@dimen/screen_right"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="bottom">

            <TextView
                android:id="@+id/timeDay"
                style="@style/deepFont_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="27 " />

            <TextView
                android:id="@+id/timeMonth"
                style="@style/deepFont_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="/ 5月" />
        </LinearLayout>

        <ImageView
            android:id="@+id/statusIv"
            android:src="@drawable/butongzhi_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:id="@+id/statusTv2"
            style="@style/primaryFont_13"
            android:text="dsadad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/screen_left">

        <TextView
            android:id="@+id/titleTv"
            style="@style/deepFont_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:lineSpacingMultiplier="1.2"
            android:text="titme"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contentTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:lineSpacingMultiplier="1.2"
            android:text="titme"
            android:textColor="#555555"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    style="@style/deepFont_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="红包总额:  " />

                <TextView
                    android:id="@+id/priceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥300.00"
                    android:textColor="@color/tagColor"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView

                    style="@style/deepFont_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总数:  " />

                <TextView
                    android:id="@+id/totalAcountTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300.00"
                    android:textColor="@color/tagColor"
                    android:textSize="12dp" />

                <TextView
                    style="@style/deepFont_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="份" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right">

                <TextView
                    style="@style/deepFont_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余:  " />

                <TextView
                    android:id="@+id/leftTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30%"
                    android:textColor="@color/tagColor"
                    android:textSize="12dp" />

                <TextView
                    style="@style/deepFont_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="份" />
            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/imageIv"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:id="@+id/videoLl"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            android:orientation="vertical">

            <cn.jzvd.JzvdStd
                android:id="@+id/videoplayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>



        <TextView
            android:id="@+id/detailTv"
            android:text="点次查看详情"
            android:gravity="center_vertical"
            android:textSize="@dimen/dimen_16"
            android:textColor="@color/tagColor"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
      <LinearLayout
          android:id="@+id/getRedPacketLl"
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:layout_height="wrap_content">
          <LinearLayout

              android:layout_width="match_parent"
              android:layout_height="70dp"
              android:gravity="center">

              <TextView
                  style="@style/deepFont_15"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="红包口令: " />

              <com.stay.toolslibrary.library.nestfulllistview.NestFullListView
                  android:id="@+id/kouLingLv"
                  android:layout_width="wrap_content"
                  android:layout_height="25dp"></com.stay.toolslibrary.library.nestfulllistview.NestFullListView>
          </LinearLayout>


          <LinearLayout
              android:id="@+id/koulingetLL"
              android:visibility="gone"
              android:layout_width="270dp"
              android:layout_marginBottom="15dp"
              android:layout_height="34dp"
              android:layout_gravity="center_horizontal"
              android:background="@drawable/spite_5_line"
              android:orientation="vertical"
              android:padding="1dp">

              <EditText
                  android:id="@+id/kouLingEt"
                  style="@style/deepFont_12"
                  android:layout_width="match_parent"
                  android:layout_height="34dp"
                  android:background="@drawable/white_5_bk"
                  android:hint="请输入红包口令"
                  android:maxLength="6"
                  android:paddingLeft="20dp"
                  android:textColorHint="@color/tintColor"
                  android:visibility="gone" />

              <TextView
                  android:id="@+id/kouLingHintTv"
                  style="@style/deepFont_12"
                  android:layout_width="match_parent"
                  android:layout_height="34dp"
                  android:background="@drawable/bgcolor_5_bk"
                  android:gravity="center_vertical"
                  android:hint="15s后输入红包口令领取红包"
                  android:paddingLeft="20dp"
                  android:textColorHint="@color/tintColor" />

          </LinearLayout>

          <TextView
              android:id="@+id/getReadPacketTv"
              style="@style/white_13"
              android:layout_width="200dp"
              android:layout_height="36dp"
              android:layout_gravity="center_horizontal"
              android:background="@drawable/get_btn_bk"
              android:gravity="center"
              android:text="领取红包" />


          <TextView
              android:id="@+id/statasTagTv"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="10dp"
              style="@style/tintFont_12"
              android:text="您已参加过此活动，每人仅限一次"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
      </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bgColor" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/screen_left"
        android:paddingRight="@dimen/screen_right">

        <TextView
            style="@style/deepFont_15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="参与用户" />

    </LinearLayout>

</LinearLayout>