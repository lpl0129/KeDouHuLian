<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_135"
    android:layout_height="@dimen/dimen_80"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/userLl"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageIv"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40" />

        <TextView
            android:id="@+id/textTv"
            android:maxWidth="@dimen/dimen_80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="dsad"
            android:textColor="@color/deepColor"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="45dp"
        android:id="@+id/managerLL"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/jieguTv"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:visibility="gone"
            android:background="@drawable/tag_bk_5"
            android:gravity="center"
            android:text="解雇"
            android:textColor="@color/whiteColor"
            android:layout_marginBottom="5dp"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/guyongTv"
            android:layout_width="45dp"
            android:visibility="gone"
            android:layout_height="20dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/primary_5_bk"
            android:gravity="center"
            android:text="雇佣"
            android:textColor="@color/whiteColor"
            android:textSize="12dp" />

        <TextView
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:id="@+id/jiesuanTv"
            android:visibility="gone"
            android:background="@drawable/b2_5_bk"
            android:gravity="center"
            android:text="结算"
            android:textColor="@color/whiteColor"
            android:textSize="12dp" />

        <TextView
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:id="@+id/stateTv"
            android:background="@drawable/b2_5_bk"
            android:gravity="center"
            android:text="已结算"
            android:visibility="gone"
            android:textColor="@color/whiteColor"
            android:textSize="12dp" />
        <TextView
            android:visibility="gone"
            android:id="@+id/shensuTv"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:background="@drawable/tag_bk_5"
            android:gravity="center"
            android:text="申诉"
            android:layout_marginTop="@dimen/dimen_10"
            android:textColor="@color/whiteColor"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>