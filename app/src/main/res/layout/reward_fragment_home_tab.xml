<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/reward_home_bk"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/topview"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    style="@style/white_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="蝌蚪币" />

                <RelativeLayout
                    android:id="@+id/msgRl"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="@dimen/screen_right">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerInside"
                        android:src="@drawable/xinxi_btn" />

                    <ImageView
                        android:id="@+id/msgUnRead"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/toolslib_tab_message_notify_bk" />

                </RelativeLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/collectGongLueTv"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/shoujigonglue_btn"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:text="收集攻略"
                    android:textColor="#FFFDDF01"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/myMoneyTv"
                    style="@style/white_16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/kedoubishouye_icn"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:text="我的蝌蚪币：0" />

                <TextView
                    android:id="@+id/yiJianShouQutv"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/yijianshouqu_btn"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:text="一键收取"
                    android:textColor="#FFFDDF01"
                    android:textSize="12dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/emptyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/home_mid_bg" />

        </LinearLayout>

        <com.qttx.kedouhulian.weight.AntForestView
            android:id="@+id/antView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="@dimen/dimen_14"
        android:background="@drawable/white_10_bk"
        android:orientation="vertical"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/sjRenwuTv"
                style="@style/deepFont_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/shangjinrenwu_btn"
                android:gravity="center"
                android:text="赏金任务" />

            <TextView
                android:id="@+id/ggHongBaoTv"
                style="@style/deepFont_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/guanggaohongbao_btn"
                android:gravity="center"
                android:text="广告红包" />

            <TextView
                android:id="@+id/sjLieRenTv"
                style="@style/deepFont_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/shangjinleiren_btn"
                android:gravity="center"
                android:text="赏金猎人" />

            <TextView
                android:id="@+id/kedouChiTangTv"
                style="@style/deepFont_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/kedouchitang_btncopy"
                android:gravity="center"
                android:text="蝌蚪池塘" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">


            <TextView
                android:id="@+id/kdBiMaketTv"
                style="@style/deepFont_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/kedoushichang_btn"
                android:gravity="center"
                android:text="蝌蚪币市场" />

            <TextView
                android:id="@+id/woDeQianBaoTv"
                style="@style/deepFont_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/wodeqianbao_btn"
                android:gravity="center"
                android:text="我的钱包" />

            <TextView
                android:id="@+id/woDeHeHuoTv"
                style="@style/deepFont_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/wodehehuoren_btn"
                android:gravity="center"
                android:text="我的合伙人" />

            <TextView
                android:id="@+id/biFenHongTv"
                style="@style/deepFont_12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@drawable/bifenhong_btn"
                android:gravity="center"
                android:text="币分红领取" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>