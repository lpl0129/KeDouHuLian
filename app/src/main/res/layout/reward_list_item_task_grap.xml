<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/whiteColor"
    android:paddingLeft="@dimen/screen_left"
    android:paddingRight="@dimen/screen_right">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/userAvatarIv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user_avatar_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/userName"
                    style="@style/deepFont_15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="大萨达萨达啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊" />

                <TextView
                    android:id="@+id/taskState"
                    style="@style/primaryFont_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="任务进行中" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/priceTv"
                    style="@style/deepFont_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/yongjin_icn"
                    android:drawablePadding="4dp"
                    android:text="5.50"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/priceDetail"
                    android:textSize="10dp"
                    android:textColor="@color/tintColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:singleLine="true"
                    android:text="[完成可获得0.005个蝌蚪币]" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/titleTv"
        style="@style/deepFont_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:lineSpacingMultiplier="1.2"
        android:text="titme"
        android:textStyle="bold" />

    <com.stay.toolslibrary.widget.ImageGrideShow
        android:id="@+id/imageShowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/imageHideTv"
        style="@style/tintFont_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="该任务已设置了图片隐藏，抢单后方可查看" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

        <TextView
            style="@style/tintFont_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/redu_icn"
            android:drawablePadding="4dp"
            android:text="热度:  " />

        <TextView
            android:id="@+id/hotTv"
            style="@style/tintFont_13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:text="1427" />

        <TextView
            android:id="@+id/grapTv"
            style="@style/primaryFont_13"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/primary_15_line"
            android:gravity="center"
            android:text="立即抢单" />
    </LinearLayout>
</LinearLayout>