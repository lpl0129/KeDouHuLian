<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteColor"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/screen_left"
            android:paddingRight="@dimen/screen_right">

            <TextView
                android:id="@+id/locationTv"
                style="@style/deepFont_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/dingwei_icn"
                android:drawablePadding="4dp"
                android:text="背景" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right">

                <TextView
                    style="@style/tintFont_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="抢走时间:  " />

                <TextView
                    android:id="@+id/timeTv"
                    style="@style/tintFont_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="＋180.98" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/spiteColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="10dp">

                <TextView
                    style="@style/deepFont_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="占领成本："
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/buyPriceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="$2442.34元"
                    android:textColor="@color/primaryColor"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="10dp">

                <TextView
                    style="@style/deepFont_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赚租金："
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/incomeZuJinTv"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="$2442.34元"
                    android:textColor="@color/tagColor"
                    android:textSize="14dp" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/screen_left"
            android:paddingRight="@dimen/screen_right">


            <TextView
                android:layout_marginRight="10dp"
                android:singleLine="true"
                style="@style/tintFont_13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="当您需要回笼资金又长时间无人购买时你可尝试" />

            <TextView
                android:id="@+id/zhuanRangTv"
                style="@style/primaryFont_12"
                android:layout_width="75dp"
                android:layout_height="27dp"
                android:background="@drawable/primary_13_line"
                android:gravity="center"
                android:text="定价转让" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>