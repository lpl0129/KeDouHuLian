<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- android:background="" -->
    <LinearLayout
        android:id="@+id/red_bag_layout"
        android:layout_width="230dp"
        android:layout_height="70dp"
        android:background="@drawable/message_red_package_bg_right"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rc_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/yihzhuanzhang_icn"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bless_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:visibility="visible"
                tools:text="¥100.00" />

            <TextView
                android:id="@+id/bless_words_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="12dp"
                android:visibility="visible"
                tools:text="转账给王小雨" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="210dp"
        android:layout_height="0.5dp"
        android:background="#EDEDED" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:background="#00000000"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/left_place_tv"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="#00000000" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:layout_weight="1"
            android:background="@drawable/red_bag_white_bottom_bg">

            <TextView
                android:id="@+id/red_bag_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="start|center_vertical"
                android:paddingLeft="16dp"
                android:text="余额转账"
                android:textColor="#666666"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/right_place_tv"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="#00000000" />
    </LinearLayout>


</LinearLayout>