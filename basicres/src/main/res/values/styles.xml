    <!--特殊提示字色值-->
    <style name="layoutViewStyle">
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/screen_left</item>
        <item name="android:paddingRight">@dimen/screen_right</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="layoutViewStyle_Margin" parent="layoutViewStyle">
        <item name="android:layout_marginLeft">@dimen/screen_left</item>
        <item name="android:layout_marginRight">@dimen/screen_right</item>
    </style>
    <!--整理成可以动态配置-->
    <style name="layoutViewStyle_EditBk">
        <item name="android:background">@drawable/edit_15_bk</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="layoutViewStyle_EditBk_Margin" parent="layoutViewStyle_EditBk">
        <item name="android:layout_marginLeft">@dimen/screen_left</item>
        <item name="android:layout_marginRight">@dimen/screen_right</item>
    </style>

    <style name="editViewStyle">
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:maxLength">20</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/deepColor</item>
    </style>

    <style name="editViewStyle_hasBk" parent="@style/editViewStyle">
        <item name="android:background">@drawable/edit_15_bk</item>
        <item name="android:layout_marginLeft">@dimen/screen_left</item>
        <item name="android:layout_marginRight">@dimen/screen_right</item>
    </style>

    <style name="textViewStyle_Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/primary_15_bk</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textViewStyle_Button_Margin" parent="textViewStyle_Button">
        <item name="android:layout_marginLeft">@dimen/screen_left</item>
        <item name="android:layout_marginRight">@dimen/screen_right</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14dp</item>
        <item name="textAllCaps">false</item>
    </style>


